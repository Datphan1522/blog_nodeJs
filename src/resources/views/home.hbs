<div class="mt-4">
    <div class="row">
        {{#each courses}}
        <div class="col-sm-6 col-lg-4">
            <div class="card">
                <a href="/courses/{{this.slug}}">
                    <img class="card-img" src="{{this.image}}" alt="{{this.name}}" class="khung-anh">
                </a>
                <div class="card-body">
                    <a href="/courses/{{this.slug}}">
                        <h3 class="card-title">{{this.name}}</h3>   
                    </a>
                    <p class="card-description">{{this.description}}</p>
                    <a class="btn btn-buy">Mua</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>